# Database Configuration
DB_HOST=localhost:3308
DB_NAME=maintenance_app
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_DEFAULT_ORIGIN=http://localhost:3001

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME=Maintenance App

# JWT Configuration (if needed in future)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=3600

# API Configuration
API_VERSION=v1
API_BASE_URL=/api

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# Email Configuration (if needed)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_EMAIL=noreply@maintenance-app.com
MAIL_FROM_NAME=Maintenance App